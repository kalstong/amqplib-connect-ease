{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
  },

  "include": ["src"], // which files to compile
  "exclude": ["node_modules", "**/__tests__/*"] // which files to skip
}
